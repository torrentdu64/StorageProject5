@model StorageProject5.ViewModels.RenderFurnitureViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<h2>Deposit your Stuff</h2>

<h2>New Depot</h2>

@using (Html.BeginForm("Create", "Furnitures"))
{
    <div class="form-group">

        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-danger">Submit</button>
}

    <h2>Use You Code</h2>
@using (Html.BeginForm("GiveBack", "Furnitures"))
{
    <div class="form-group">
        @Html.LabelFor( x => x.CodeName)
       
        @Html.TextBoxFor(m => m.CodeName, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-danger">Search</button>
}