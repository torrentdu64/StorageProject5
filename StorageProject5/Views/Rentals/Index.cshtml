

@model StorageProject5.ViewModels.RentalFurnitureViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index Rental</h2>


<div class="container">

    @using (Html.BeginForm("New", "Rentals", FormMethod.Get))
    {
        //foreach (var item in Model.availableFurnitures)
        for (int i = 0; i < Model.availableFurnitures.Count; i++)
        {
            <div class="row">

                <div class="panel panel-default">
                    <div class="panel-body">

                        @*<h1>@item.Name - @item.Id <span class="label label-warning">Available</span></h1>*@
                        <h1> @Model.availableFurnitures[i].Name -  @Model.availableFurnitures[i].Id <span class="label label-warning">Available</span></h1>
                        <h3></h3>
                    </div>
                    <div class="panel-footer">
                        <div class="form-check">
                           
                            @Html.HiddenFor( m => m.availableFurnitures[i].Id)
                            @Html.HiddenFor( m => m.availableFurnitures[i].Name)
                            @Html.CheckBoxFor(m => m.availableFurnitures[i].IsRented)
                        </div>


                    </div>
                </div>

            </div>


        }
        <div class="row">
            <button type="submit" class="btn btn-danger">Save</button>
        </div>
    }






</div>
