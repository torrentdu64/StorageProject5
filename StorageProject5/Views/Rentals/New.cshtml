@model StorageProject5.ViewModels.RentalFurnitureViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rente a furniture</h2>

<h3>You have choose </h3>

<p>Please reserve a furniture through this form</p>
@using (Html.BeginForm("Create", "Rentals"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Rental.Name)
        @Html.TextBoxFor(m => m.Rental.Name, new { @class = "form-control" })

        @for (int i = 0; i < Model.Furnitures.Count; i++)
        {

            @Html.HiddenFor(h => h.Furnitures[i].Id);
            @Html.HiddenFor(m => m.Furnitures[i].IsRented);
        }


    </div>

    <ul>
        @foreach (var item in Model.Furnitures)
        {
            <li>@item.Name - @item.Id - </li>
        }

    </ul>
    <h3>Customer details address Think to redirect payment and then resume and emailing</h3>  
   <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>


<button type="submit" class="btn btn-danger">Submit</button>
}